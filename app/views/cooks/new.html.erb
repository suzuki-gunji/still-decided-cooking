<%= form_with model: @cook, local: true do |f|%>

  <%= render 'shared/error_messages', model: f.object %>

  <div class = "main-cook">
    <div class="field">
      <%= f.label :name, "料理名" %><br />
      <%= f.text_field :name, class: :form__name, placeholder: "例：カレーライス" %>
    </div>

    <div class="field">
      <%= f.label :recipe, "レシピ" %><br />
      <%= f.text_area :recipe, class: :form__recipe, placeholder: "例：ルーをご飯にかけたら完成です", rows: "8" %>
    </div>

    <div class="field">
      <p>料理のジャンルを入力してください</p>
      <%= f.collection_select(:genre_id, Genre.all, :id, :genre, {}, {class:"genre-select"}) %>
    </div>

    <div class="actions">
      <%= f.submit "保存する", class: :btn  %>
    </div>
    
    <div class = "top_btn"> 
      <%= link_to 'トップページに戻る', root_path, method: :get, class: "btn" %>
    </div>
  </div> 
<% end %>